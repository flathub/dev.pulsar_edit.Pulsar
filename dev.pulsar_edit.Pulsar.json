{
    "app-id": "dev.pulsar_edit.Pulsar",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "22.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "pulsar.sh",
    "rename-desktop-file": "pulsar.desktop",
    "rename-icon": "pulsar",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.gtk.vfs.*",
        "--env=ELECTRON_TRASH=gio",
        "--env=TMPDIR=/var/tmp"
    ],
    "modules": [
        {
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "pulsar.deb",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/pulsar-edit/pulsar/releases/download/v1.109.0/Linux.pulsar_1.109.0_amd64.deb",
                    "sha256": "439a906b9b5f3a6d577f4c31d5b07989d6faafc7808462fccb0a54deb12bc012",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://pulsar-edit.dev/download.html",
                        "version-pattern": "\"https://github.com/pulsar-edit/pulsar/releases/tag/v([\\d\\.-]*)\"",
                        "url-template": "https://github.com/pulsar-edit/pulsar/releases/download/v$version/Linux.pulsar_${version}_amd64.deb"
                    }
                },
                {
                    "type": "file",
                    "dest-filename": "pulsar.deb",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/pulsar-edit/pulsar/releases/download/v1.109.0/ARM.Linux.pulsar_1.109.0_arm64.deb",
                    "sha256": "8d0faa828b81cbfd1be06f49fc459d6fbbb0dd6d5c073b957b7f8059cd3548c3",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://pulsar-edit.dev/download.html",
                        "version-pattern": "\"https://github.com/pulsar-edit/pulsar/releases/tag/v([\\d\\.-]*)\"",
                        "url-template": "https://github.com/pulsar-edit/pulsar/releases/download/v$version/ARM.Linux.pulsar_${version}_arm64.deb"
                    }
                },
                {
                    "type": "file",
                    "path": "dev.pulsar_edit.Pulsar.metainfo.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "pip3",
                    "commands": [
                        "export PYTHONUSERBASE=\"$XDG_DATA_HOME/python\"",
                        "exec /usr/bin/pip3 \"$@\""
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "pulsar.sh",
                    "commands": [
                        "export ATOM_HOME=\"$XDG_DATA_HOME\"",
                        "/app/bin/zypak-wrapper.sh /app/Pulsar/pulsar --in-process-gpu --executed-from=\"$(pwd)\" --pid=$$ \"$@\""
                    ]
                }
            ],
            "modules": [
                "shared-modules/libsecret/libsecret.json"
            ],
            "name": "pulsar",
            "buildsystem": "simple",
            "build-commands": [
                "ar x pulsar.deb",
                "tar -xf data.tar.xz",
                "cp -r usr/* /app",
                "cp -r opt/* /app",
                "install pip3 /app/bin",
                "desktop-file-edit --set-key=Exec --set-value='pulsar.sh %U' /app/share/applications/pulsar.desktop",
                "install pulsar.sh /app/bin",
                "chmod +x \"/app/bin/pulsar.sh\"",
                "install -Dm644 dev.pulsar_edit.Pulsar.metainfo.xml /app/share/appdata/dev.pulsar_edit.Pulsar.metainfo.xml"
            ]
        }
    ]
}
